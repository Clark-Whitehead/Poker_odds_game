BoxLayoutExample:

<BoxLayoutExample>
	rows: 6
	Label:
		text: "Your Cards"
		font_size: 60
		color: (0,0,0,1)
		background_color: (1,1,1,1)
		canvas.before:
			Color:
				rgba: self.background_color
			Rectangle:
				size: self.size
				pos: self.pos

	GridLayout:
		cols: 2
		Image:
			source: root.card1
			size_hint_y: 20
			allow_stretch: True
		Image:
			source: root.card2
			size_hint_y: 6
			allow_stretch: True
	GridLayout:
		cols: 4
		Button:
			text: root.odd1
			font_size: 60
			background_color: root.color1
			on_press: root.option1()
		Button:
			text: root.odd2
			font_size: 60
			background_color: root.color2
			on_press: root.option2()
		Button:
			text: root.odd3
			font_size: 60
			background_color: root.color3
			on_press: root.option3()
		Button:
			text: root.odd4
			font_size: "60dp"
			background_color: root.color4
			on_press: root.option4()
	Label:
		text: "Opponents Cards"
		font_size: 60
		color: (0,0,0,1)
		background_color: (1,1,1,1)
		canvas.before:
			Color:
				rgba: self.background_color
			Rectangle:
				size: self.size
				pos: self.pos
	GridLayout:
		cols: 2
		Image:
			source: root.card3
			size_hint_y: 20
			allow_stretch: True
		Image:
			source: root.card4
			size_hint_y: 6
			allow_stretch: True


	Button:
		text: "Next"
		font_size: 60
		on_press: root.next()

